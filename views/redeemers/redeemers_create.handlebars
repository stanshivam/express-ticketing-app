<h4 class="my-h4">Create Redeemer</h4>

{{# if errors }}
  <p class="alert alert-danger">
      {{# each errors }}
            {{ this.msg }} </br>
      {{/each}}
  </p>
{{/if}}

{{# if message }}
  <p class="alert alert-success">
      {{ message }} </br>
  </p>
{{/if}}

<form method="post" action="/redeemers/create">
<div class="col-md-5">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="name" placeholder="Full Name">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" name="email" placeholder="Email ID">
  </div>
  <div class="form-group">
    <label>Contact No.</label>
    <input type="phone" class="form-control" name="contact" placeholder="Contact Number">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  </div>
  <div class="col-md-5">
  <div class="form-group">
    <label>Address</label>
    <input type="phone" class="form-control" name="address" placeholder="Address">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
   <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" class="form-control" name="cpassword" placeholder="Conform Password">
  </div>
  </div>
</form>
